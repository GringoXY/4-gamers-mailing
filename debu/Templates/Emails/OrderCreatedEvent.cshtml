@model Contracts.Events.Order.OrderCreatedEvent

<html>
<head>
    <meta charset="UTF-8" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #cdcdcd;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 600px;
            margin: 20px auto;
            background: #fff;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        .header {
            text-align: center;
        }
        .header img {
            max-width: 150px;
        }
        .company-name {
            font-size: 24px;
            font-weight: bold;
            margin-top: 10px;
        }
        .content {
            margin-top: 20px;
        }
        .products-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        .products-table th, .products-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        .products-table th {
            background-color: #f2f2f2;
        }
        h2, h3 {
            text-align: center;
        }
    </style>
</head>
<body>
  <div class="container">
    <div class="header">
        @* @if (!string.IsNullOrEmpty(Model.LogoBase64))
        {
            <img src="@Model.LogoBase64" alt="4Gamers Logo" />
        } *@
        <div class="company-name">4Gamers</div>
    </div>
    <div class="content">
        <h2>Order Confirmation</h2>
        <h3>Order @Model.Id</h3>
        <p>Hello <b>@Model.ShipToName</b>,</p>
        <p>Thank you for your purchase. Your order has been successfully received.</p>
        <h3>Shipping Details</h3>
        <p><strong>Address:</strong> @Model.ShipToCountry @Model.ShipToCity @Model.ShipToPostalCode @Model.ShipToStateOrProvince </p>
        <p><strong>Shipping Method:</strong> @Model.DeliveryName - @((Model.DeliveryDiscountedPrice ?? Model.DeliveryPrice).ToString("C"))</p>
        <h3>Order Details</h3>
        <table class="products-table">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.ProductCompanyName @product.ProductModel</td>
                        <td>@product.ProductQuantity</td>
                        <td>@((product.ProductDiscountedPrice ?? product.ProductPrice).ToString("C"))</td>
                    </tr>
                }
            </tbody>
        </table>
        <p>Total to pay: @Model.TotalPay.ToString("C")</p>
        <p>Send payment to: <b>18 1090 2402 9488 5238 7642 8441</b><br />with title: <b>@Model.Id</b>.</p>
        <p>If you have any questions, please contact our support team.</p>
    </div>
  </div>
</body>
</html>
